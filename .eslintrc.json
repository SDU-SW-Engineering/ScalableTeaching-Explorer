{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warning",
            {
                "selector": "variable",
                "format": ["camelCase", "UPPER_CASE", "PascalCase"]
            }
        ],
        "@typescript-eslint/semi": "warn",
        "curly": ["warn", "multi-or-nest"],
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "no-unused-vars": "warn"
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}
